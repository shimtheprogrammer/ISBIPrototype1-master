                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/md_sal"
                                android:textSize="@dimen/text"
                                android:textStyle="bold"
                                android:padding="@dimen/text_view_padding"/>

                        </LinearLayout>
                    </LinearLayout>
