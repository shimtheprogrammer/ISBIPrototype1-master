                                android:padding="@dimen/text_view_padding"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_padding_T_n_B"
                            android:gravity="center"
