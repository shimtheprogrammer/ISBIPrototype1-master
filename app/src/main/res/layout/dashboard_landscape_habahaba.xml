<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:background="@color/white_two">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:fadeScrollbars="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sale_card"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/water_blue"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_padding"
                            android:id="@+id/sale_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/sale_icon_2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/person_name"
                            android:textColor="@android:color/white"
                            android:text="@string/sale"
                            android:textSize="@dimen/heading"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/purchase_card"
                    android:padding="@dimen/card_view_padding"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/water_blue"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_padding"
                            android:id="@+id/pruchase_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/purchase_icon_2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/purchase"
                            android:textSize="@dimen/heading"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/delivery_card"
                    android:padding="@dimen/card_view_padding"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/water_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/delivery_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/delivery_icon_2"
                            android:padding="@dimen/card_view_padding"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/delivery_icon"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/delivery"
                            android:textSize="@dimen/heading"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pre_sale_card"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/water_blue"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/card_view_padding"
                            android:src="@drawable/sale_icon_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="@string/presale"
                            android:textSize="@dimen/heading"
                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pre_purchase_card"
                    android:padding="@dimen/card_view_padding"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/water_blue"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/card_view_padding"
                            android:src="@drawable/purchase_icon_2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/prepurchase"
                            android:textSize="@dimen/heading"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/expenses_card"
                    android:padding="@dimen/card_view_padding"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/water_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/card_view_padding"
                            android:src="@drawable/expense_icon_2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/delivery_icon"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/expenses"
                            android:textSize="@dimen/heading"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/owner_card"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/water_blue"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/card_view_padding"
                            android:src="@drawable/owner_icon_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="@string/owner"
                            android:textSize="@dimen/heading"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/asset_card"
                    android:padding="@dimen/card_view_padding"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/water_blue"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/card_view_padding"
                            android:src="@drawable/assets_icon_3"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/asset"
                            android:textSize="@dimen/heading"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_view_padding"
                android:paddingRight="@dimen/card_view_padding"
                android:paddingTop="@dimen/card_view_padding_T_n_B"
                android:paddingBottom="@dimen/card_view_padding_T_n_B">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/loan_card"
                    android:padding="@dimen/card_view_padding"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@drawable/lift_on_touch"
                    android:clickable="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/water_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/card_view_padding"
                            android:src="@drawable/loan_icon_2"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/delivery_icon"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/loan"
                            android:textSize="@dimen/heading"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout2">

            <!--android:text="Matunda Fruits Shop"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/heading"
                android:textColor="@color/water_blue"
                android:gravity="center_horizontal"

                android:id="@+id/title"
                android:paddingTop="@dimen/card_view_padding"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:textColor="#757575"
                android:gravity="center_horizontal"
                android:text="Summary of Reports"
                android:paddingBottom="@dimen/card_view_padding"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_view_padding">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/card_view_padding"
                    android:weightSum="3"
                    android:background="@drawable/grey_border">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/card_view_padding"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/pieTitle"
                            android:textSize="@dimen/text"
                            android:textStyle="bold"
                            android:padding="@dimen/text_view_padding"/>

                        <com.github.mikephil.charting.charts.PieChart
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/pie_chart">
                        </com.github.mikephil.charting.charts.PieChart>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/card_view_padding">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/card_view_padding"
                            android:layout_gravity="right|top"
                            android:gravity="right|top">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/card_view_padding">
                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/blue_label"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/card_view_padding">
                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/blue_label"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/card_view_padding">
                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/blue_label"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/card_view_padding"
                            android:layout_gravity="left|bottom"
                            android:gravity="left|bottom">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/card_view_padding_T_n_B"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/blue_label"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cash"
                                    android:textSize="@dimen/text"
                                    android:textStyle="bold"
                                    android:padding="@dimen/text_view_padding"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/card_view_padding_T_n_B"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/red_label"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mpesa"
                                    android:textSize="@dimen/text"
                                    android:textStyle="bold"
                                    android:padding="@dimen/text_view_padding"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/card_view_padding_T_n_B"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/green_label"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bank"
                                    android:textSize="@dimen/text"
                                    android:textStyle="bold"
                                    android:padding="@dimen/text_view_padding"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mdsal"
                                    android:textSize="@dimen/text"
                                    android:textStyle="bold"
                                    android:padding="@dimen/text_view_padding"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/md_sal"
                                    android:textSize="@dimen/text"
                                    android:textStyle="bold"
                                    android:padding="@dimen/text_view_padding"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="@dimen/card_view_padding"
                    android:background="@drawable/grey_inside">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:text="@string/NoCustomers"
                            android:textSize="@dimen/text"
                            android:textStyle="bold"
                            android:paddingTop="@dimen/text_view_padding"/>
